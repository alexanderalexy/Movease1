    <input type="text" name="actors" placeholder="Actors"><br>
    <input type="text" name="genre" placeholder="Movie Genre"><br>
    <input type="number" name="length" placeholder="Length"><br>
  
  
    <button type="submit">Update Movie</button>

</form>
  
